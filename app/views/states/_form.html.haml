= form_for @state, html: { class: "form form-horizontal state" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :volume, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :volume, class: 'form-control', required: true
    = f.error_span(:volume)
  .form-group
    = f.label :batch_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :batch_id, class: 'form-control', required: true
    = f.error_span(:batch_id)
  .form-group
    = f.label :vessel_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :vessel_id, class: 'form-control', required: true
    = f.error_span(:vessel_id)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), states_path, :class => 'btn btn-default'
