- model_class = Batch
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:code) + ':'
  = @batch.code
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  = @batch.name.presence || 'Unnamed'
%p
  %strong= model_class.human_attribute_name(:volume) + ':'
  = @batch.volume
  = link_to @batch.unit.name.pluralize, unit_url(@batch.unit)

= link_to t('.back', :default => t("helpers.links.back")), batches_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_batch_path(@batch), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), batch_path(@batch), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
