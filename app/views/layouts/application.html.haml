!!! 5
%html{ :lang => 'en' }
  %head
    %title= (@page_title || 'CiderChain')
    = csrf_meta_tags
    =stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    =javascript_include_tag 'application', 'data-turbolinks-track' => true

  %body
    %nav{class: 'navbar navbar-default navbar-fixed-top'}
      .container-fluid
        .navbar-header
          %button{type: "button", class: "navbar-toggle", 'data-toggle'=>"collapse", 'data-target'=>"#bs-example-navbar-collapse-1", 'aria-expanded'=>"false"}
            %span{class:"sr-only"} Toggle navigation
          =link_to 'CiderChain', root_path, class: 'navbar-brand'

        .div{class: "collapse navbar-collapse", id:"bs-example-navbar-collapse-1"}
          %ul{class: "nav navbar-nav"}
            %li= link_to 'Snapshot', states_path
            %li.dropdown
              %a{href: '#', class: "dropdown-toggle", 'data-toggle'=>"dropdown", role: "button", 'aria-haspopup'=>"true", "aria-expanded"=>"false"}
                Actions
                %span.caret
              %ul{class: 'dropdown-menu'}
                %li= link_to 'Batches', batches_path
                %li= link_to 'Statuses', statuses_path
                %li= link_to 'Vessels', vessels_path
          .div{class:"navbar-text, navbar-right"}
            - if current_user.present?
              Signed in as #{link_to(current_user.email, current_user,  class:'navbar-link')}
              = link_to 'Logout', logout_url
            - else
              = link_to 'Login', login_url
    %p
    .container
      .content
        - [:error, :warning, :success, :info, :notice].each do |message_type|
          - if flash[message_type]
            %div{ class: "alert-message #{message_type} fade in" }
              = link_to 'x', '#', class: 'close'
              %p
                = flash[message_type]

        - if content_for?(:page_header)
          .page-header
            %h1
              = yield :page_header
        = yield
        .push
    .navbar.navbar-default.navbar-fixed-bottom
      .container
        %p
          = "&copy; #{@copyright || 'Twitter Bootstrap'} #{Date.today.year}".html_safe

