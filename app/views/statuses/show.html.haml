- model_class = Status
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:volume) + ':'
  %br
  = @status.volume
  = @status.unit.name.pluralize
%p
  %strong= model_class.human_attribute_name(:batch) + ':'
  = link_to @status.batch.code, @status.batch
%p
  %strong= model_class.human_attribute_name(:vessel) + ':'
  = link_to @status.vessel.code, @status.vessel
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  = link_to @status.state.name, @status.state


= link_to t('.back', :default => t("helpers.links.back")), statuses_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_status_path(@status), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), status_path(@status), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
