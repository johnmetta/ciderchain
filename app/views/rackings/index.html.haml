- model_class = Racking
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:volume)
      %th= model_class.human_attribute_name(:batch)
      %th= model_class.human_attribute_name(:vessel)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @rackings.each do |racking|
      %tr
        %td= link_to racking.id, racking_path(racking)
        %td
          = racking.volume
          = racking.unit.short_name
        %td= racking.batch.name
        %td= racking.vessel.code
        %td
          = racking.state.name
          = "(closed: #{racking.closed_by_id || ''})" if racking.closed
        %td=l racking.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_racking_path(racking), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), racking_path(racking), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_racking_path, :class => 'btn btn-primary'
