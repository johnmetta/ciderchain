- model_class = Measurement
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @measurement.name
%p
  %strong= model_class.human_attribute_name(:value) + ':'
  %br
  = @measurement.value
%p
  %strong= model_class.human_attribute_name(:state_id) + ':'
  %br
  = @measurement.state_id


= link_to t('.back', :default => t("helpers.links.back")), measurements_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_measurement_path(@measurement), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), measurement_path(@measurement), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
