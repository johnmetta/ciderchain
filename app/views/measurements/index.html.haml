- model_class = Measurement
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:value)
      %th= model_class.human_attribute_name(:status_id)
      %th= model_class.human_attribute_name(:unit_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @measurements.each do |measurement|
      %tr
        %td= link_to measurement.id, measurement_path(measurement)
        %td= measurement.name
        %td= measurement.value
        %td= measurement.state_id
        %td= measurement.unit_id
        %td=l measurement.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_measurement_path(measurement), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), measurement_path(measurement), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_measurement_path, :class => 'btn btn-primary'
