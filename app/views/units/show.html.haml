- model_class = Unit
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  = @unit.name
%p
  %strong= model_class.human_attribute_name(:dimensions) + ':'
  = @unit.dimensions
%p
  %strong= model_class.human_attribute_name(:factor) + ':'
  = @unit.factor
%p
  %strong= model_class.human_attribute_name(:base) + ':'
  = link_to @unit.base.name, @unit.base


= link_to t('.back', :default => t("helpers.links.back")), units_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_unit_path(@unit), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), unit_path(@unit), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
