= form_for @unit, html: { class: "form form-horizontal unit" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :dimensions, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :dimensions, class: 'form-control', required: true
    = f.error_span(:dimensions)
  .form-group
    = f.label :factor, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :factor, class: 'form-control', required: true
    = f.error_span(:factor)
  .form-group
    = f.label :base_id, class: 'control-label col-lg-2'
    .col-lg-10
      = render partial: 'units/dropdown', locals: { f: f, name: :base_id, required: false, selected: @unit.unit_id }
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), units_path, :class => 'btn btn-default'
