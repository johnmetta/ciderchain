= form_for @addition, html: { class: "form form-horizontal addition", id: 'dynamic-addition-form' } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :value, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :value, class: 'form-control', required: true
    = f.error_span(:value)
  .form-group
    = f.label :unit_id, class: 'control-label col-lg-2'
    .col-lg-10
      = render partial: 'units/dropdown', locals: { f: f, name: :unit_id, required: true, selected: @addition.try(:unit_id)  }
    = f.error_span(:unit_id)
  .form-group
    = f.label :batch, class: 'control-label col-lg-2'
    .col-lg-10
      = render partial: 'batches/dropdown', locals: { f: f, required: true, selected: @addition.try(:batch_id)  }
  .form-group
    = f.label :notes, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :notes, class: 'form-control', required: false
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), additions_path, :class => 'btn btn-default'
